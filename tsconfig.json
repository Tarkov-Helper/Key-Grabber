{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,

        "lib": ["es2021", "esnext.asynciterable"]
    },
    "exclude": ["node_modules"]
}
